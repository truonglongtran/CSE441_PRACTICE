<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Đặt màu nền -->
    <solid android:color="#808080"/>

    <!-- Đặt bán kính góc bo tròn -->
    <corners android:radius="16dp"/>

    <!-- Đặt đường viền -->
    <stroke
        android:width="2dp"
        android:color= "#808080"/>

    <!-- Đặt padding (khoảng cách bên trong button) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>
</shape>